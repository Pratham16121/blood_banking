<%= render 'shared/navbar' %>
<div class="container mt-3">
  <h1>New Blood Bank</h1>
  <%= form_with url: blood_banks_path, method: :post, local: true do |form| %>
   <%= form.fields_for :blood_bank do |blood_bank_form| %>
    <div class="form-group">
      <%= blood_bank_form.label :name %>
      <%= blood_bank_form.text_field :name, class: "form-control", placeholder: "Enter name" %>
    </div>
    <div class="form-group">
      <%= blood_bank_form.label :address %>
      <%= blood_bank_form.text_field :address, class: "form-control", placeholder: "Enter address" %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= blood_bank_form.label :city %>
        <%= blood_bank_form.text_field :city, class: "form-control", placeholder: "Enter city" %>
      </div>
      <div class="form-group col-md-6">
        <%= blood_bank_form.label :state %>
        <%= blood_bank_form.text_field :state, class: "form-control", placeholder: "Enter state" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= blood_bank_form.label :country %>
        <%= blood_bank_form.text_field :country, class: "form-control", placeholder: "Enter country" %>
      </div>
      <div class="form-group col-md-6">
        <%= blood_bank_form.label :location %>
        <%= blood_bank_form.text_field :location, class: "form-control", placeholder: "Enter location" %>
      </div>
    </div>
    <div class="form-group">
      <%= blood_bank_form.label :phone %>
      <%= blood_bank_form.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
    </div>
    <div class="form-group">
      <%= blood_bank_form.label :email %>
      <%= blood_bank_form.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
    <% end %>
    <%= form.submit "Create Blood Bank", class: "btn btn-primary" %>
  <% end %>
</div>
